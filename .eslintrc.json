{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["xo", "plugin:react/recommended"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],

  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "warn",
    "@typescript-eslint/camelcase": "on"
  }
}
